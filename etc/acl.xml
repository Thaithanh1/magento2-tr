<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Land_HelloWorld::title_menu" title="Title Menu" sortOrder="100">
                    <resource id="Land_HelloWorld::manage_posts" title="Manage Posts" sortOrder="2"/>
                    <resource id="Land_HelloWorld::configuration" title="Configurations" sortOrder="3"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Land_HelloWorld::system_config" title="HelloWorld section"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>        
</config>